<script>
    function readURL(input) {
       
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#previewImg').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#UploadedImages").change(function () {
        var arr = $('#UploadedImages').val().split('.');
        var imgext = arr[1];

        if (imgext == 'jpg' || imgext == 'png' || imgext == 'jpeg') {
            $("#error_msg_file").hide();
            readURL(this);
        }
        else {
            $("#error_msg_file").show();
        }
    });

    $('#Name').focusout(function (event) {
        event.preventDefault();
        var name = $("#Name").val();

        if (name.trim() != "") {
            $("#error_msg_name").hide();
            return false;
        }
        if (name.trim() == "") {            
            $("#error_msg_name").show();
            return true;
        }
    });

    $('#lstCategories').focusout(function (event) {
        event.preventDefault();
        var cat = $("#lstCategories").val();

        if (cat.trim() != "") {
            $("#error_msg_category").hide();
            return false;
        }
        if (cat.trim() == "") {           
            $("#error_msg_category").show();
            return true;
        }
    });
    function ValidationEvent() {       
        var name = $('#Name').val();
        var cat = $('#lstCategories').val();
        var arr = $('#UploadedImages').val().split('.');
        var imgext = arr[1];  
        if (name != '')
        {
            if (cat != '0')
            {
                //return true;             
                    
                if (imgext == 'jpg' || imgext == 'png' || imgext == 'jpeg' || $('#UploadedImages').val() == '')
                    {
                        return true;
                    }
                    else
                    {
                       
                        $("#error_msg_file").show();
                        return false;
                    }              
            }
            else
            {
                $("#error_msg_category").show();
                return false;
            }
        }
        else
        {
            $("#error_msg_name").show();
            return false;
        }
    }

   

