@model Project.Web.Models.ServiceQuestionnareModel
@{
    Layout = "~/Views/Shared/_LayoutPage_Admin.cshtml";

    ViewBag.Title = "Online Kaarigar | Admin-Page";
}
<link href="~/Content/css/jasny-bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/js/jasny-bootstrap.min.js"></script>


<div class="row" style="margin-bottom:162px;padding-top:50px;">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="margin-top:100px;">
        <div class="panel panel-default panel-custom">
            <div class="modal-body" style="border:1px thin gray">
                <form action="/Admin/AddNewService" method="post" id="frm_data" enctype="multipart/form-data" onsubmit="return ValidationEvent()">


                    <div class="form-group col-sm-12" id="questiondiv">
                        <textarea class="form-control input-custom" placeholder="Question" id="Question" name="Question" style="padding-top:20px;" readonly="readonly"></textarea>
                        <div id="error_msg_question" style="display:none; color:red;">
                            <p>Please Enter A Question</p>
                        </div>
                        <input type="hidden"  Id="ques" value="@Model.Question"/>
                    </div>

                    @*<div class="form-group col-sm-12" id="questionTypdiv">                       
                        <input type="text" id="ansType" name="AnswerType" class="form-control input-custom" value="@Model.AnswerType" readonly="readonly" />
                        <div id="error_msg_answerType" style="display:none; color:red;">
                            <p>Please Choose a Answer Type</p>
                        </div>                        
                    </div>*@

                    <div id="objective">
                        @{
                             int i=0;
                            foreach (var ans in Model.Answer_List)
                           {
                                    i++;
                                  <div class="form-group col-sm-12">
                                      <input type="text" class="form-control input-custom" id="answer" name="Answer @i" value="@ans.AnswerDesc" readonly="readonly"/>
                                      <div id="error_msg_answer1" style="display:none; color:red;">
                                           <p>Answer1 Can't be empty</p>
                                      </div>
                                  </div> 
                           } 
                        }                     
                    </div>

                    <div class="row" style="margin-bottom:14px;">                       
                        <div class="col-md-2">                           
                        </div>
                        <div class="col-md-8" style="margin-left:260px;">                                                     
                            <button type="button" class="btn btn-default btn-add-service-form" id="rst_btn">
                                Back
                            </button>
                        </div>
                        <div class="col-md-2">                           
                        </div>
                        <div id="error_msg_form" class="text-center" style="display:none;">
                            <p style="color: red;">There is an error in updating questionnare </p>
                        </div>
                        <div id="error_msg_page" class="text-center" style="display:none;">
                            <p style="color: red;">Please Fill Out Form Correctly</p>
                            <input type="hidden" id="Service_id" value="@Model.Service_ID_FK" />  
                            <input type="hidden" id="Questionnare_id" value="@Model.Questionnare_ID_Auto_PK" />                         
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>
    <div class="col-md-3"></div>
</div>





<script type="text/javascript">
    $(document).ready(function () {
        $("#Question").val($("#ques").val());    

    });    
</script>


<script type="text/javascript">

    $('#rst_btn').click(function () {
        var service_id = $("#Service_id").val();
        window.location = "/Admin/ManageQuestionnare?Service_Auto_Id_pk=" + service_id;
    });
</script>



