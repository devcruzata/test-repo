    <script type="text/javascript">
       

        $(document).ready(function () {
            var count = 0;
            $('#logouticon').click(function (event) {
                event.preventDefault();
                count++;             
                if (count == 1) {                
                    $("#logoutbox").css({ "display": "block" });                  
                }
                if (count == 2) {                 
                    $("#logoutbox").css({ "display": "none" });
                    count = 0;
                }
            });           
        });      
    </script> 
    <script type="text/javascript">
